<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<VBox styleClass="section-container" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.josephgibis.springcodegenerator.controllers.ConfigController">

    <!-- TITLE -->
    <Text styleClass="h2" text="Folder Names"/>
    <!-- DESC -->
    <Text styleClass="description" text="Files will be generated in the folders with the corresponding names. If the folder does not exist, it will be generated"/>

    <!-- FORM -->
    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="120" prefWidth="150"/>
            <ColumnConstraints hgrow="ALWAYS" minWidth="10"/>
        </columnConstraints>

        <Label text="Entity Package:" GridPane.rowIndex="0"/>
        <TextField fx:id="entityPackageField" text="entities" GridPane.columnIndex="1"/>

        <Label text="DTO Package:" GridPane.rowIndex="1"/>
        <TextField fx:id="dtoPackageField" text="dtos" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Repository Package:" GridPane.rowIndex="2"/>
        <TextField fx:id="repositoryPackageField" text="repositories" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Service Package:" GridPane.rowIndex="3"/>
        <TextField fx:id="servicePackageField" text="services" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="Controller Package:" GridPane.rowIndex="4"/>
        <TextField fx:id="controllerPackageField" text="controllers" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    </GridPane>
</VBox>