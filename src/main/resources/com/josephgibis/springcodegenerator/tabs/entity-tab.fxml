<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<ScrollPane styleClass="scroll-pane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.josephgibis.springcodegenerator.controllers.ConfigController">
    <VBox styleClass="main-container">
        <Text styleClass="h1" text="Entity Configuration"/>

        <!-- Entity Information Section -->
        <VBox styleClass="section-container">
            <Text styleClass="h2" text="Entity Information"/>
            <Text styleClass="description" text="Configure basic information about your entity"/>

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER" minWidth="120" prefWidth="150"/>
                    <ColumnConstraints hgrow="ALWAYS" minWidth="10"/>
                </columnConstraints>

                <Label text="Entity Name:" GridPane.rowIndex="0"/>
                <TextField fx:id="entityNameField" promptText="Product" GridPane.columnIndex="1"/>

                <Label text="Table Name:" GridPane.rowIndex="1"/>
                <TextField fx:id="tableNameField" promptText="Leave empty for default" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="ID Type:" GridPane.rowIndex="3"/>
                <ComboBox fx:id="idTypeCombo" prefWidth="150" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="ID Generation Type:" GridPane.rowIndex="4"/>
                <ComboBox fx:id="idGenerationCombo" prefWidth="150" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <Label text="Extends:" GridPane.rowIndex="5"/>
                <TextField fx:id="extendsField" promptText="Base class to extend (optional)" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
            </GridPane>
        </VBox>

        <!-- Entity Properties Section -->
        <VBox styleClass="section-container">
            <HBox spacing="10" style="-fx-alignment: center-left;">
                <Text styleClass="h2" text="Entity Properties"/>
                <Button fx:id="addPropertyButton" onAction="#addProperty" text="Add Property" styleClass="add-button"/>
            </HBox>
            <Text styleClass="description" text="Define the properties for your entity. ID field will be added automatically."/>

            <TableView fx:id="propertiesTable" prefHeight="300">
                <columns>
                    <TableColumn fx:id="propertyNameColumn" text="Property Name" prefWidth="150"/>
                    <TableColumn fx:id="propertyTypeColumn" text="Type" prefWidth="120"/>
                    <TableColumn fx:id="propertyNullableColumn" text="Nullable"/>
                    <TableColumn fx:id="propertyUniqueColumn" text="Unique"/>
                    <TableColumn fx:id="propertyDefaultColumn" text="Default Value" prefWidth="120"/>
                    <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>

    </VBox>
</ScrollPane>